<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uninorte.calculadora.constraint">

    <TextView
        android:id="@+id/txtNumero"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txttitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:text="RESULTADO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="7"
        android:onClick="onclickbtn7"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="171dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="8"
        android:onClick="onclickbtn8"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="171dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="9"
        android:onClick="onclickbtn9"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="171dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="4"
        android:onClick="onclickbtn4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="5"
        android:onClick="onclickbtn5"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        app:layout_constraintLeft_toRightOf="@+id/btn4"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="6"
        android:onClick="onclickbtn6"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        app:layout_constraintLeft_toRightOf="@+id/btn5"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="3"
        android:onClick="onclickbtn3"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="2"
        android:onClick="onclickbtn2"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="1"
        android:onClick="onclickbtn1"
        app:layout_constraintLeft_toRightOf="@+id/btn2"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="0"
        android:onClick="onclickbtn0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnmas"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="+"
        android:onClick="onclickmas"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="171dp"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        android:layout_marginLeft="15dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="95dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="305dp"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btnmenos"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="-"
        android:onClick="onclickmenos"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnmas"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="="
        android:onClick="onclickigual"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/btnmenos"
        android:layout_marginLeft="297dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:text="CLEAR"
        android:onClick="onclickclear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
